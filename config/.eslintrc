{
    env: {

        'es6'            : true,

        'node'           : true,
        'browser'        : true
    },

    extends              : 'eslint:recommended',

    parserOptions: {

        'sourceType'     : 'module'
    },

    rules: {

        'no-console'     : 0,
        'no-unused-vars' : 0,

        'semi'           : [ 'error', 'always' ]
    }
}